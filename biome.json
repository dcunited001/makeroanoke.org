{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "files": {
    "maxSize": 1572864,
    "ignoreUnknown": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": {
        "noSvgWithoutTitle": "off"
      },
      "correctness": {
        "noUnusedVariables": "warn",
        "useExhaustiveDependencies": "off"
      },
      "security": {
        "noDangerouslySetInnerHtml": "warn"
      },
      "style": {
        "useBlockStatements": "error",
        "noNonNullAssertion": "warn"
      },
      "performance": {
        "noDelete": "warn"
      },
      "suspicious": {
        "noExplicitAny": "off"
      },
      "complexity": {
        "noForEach": "warn"
      }
    },
    "ignore": [
      "node_modules",
      "dist",
      "site",
      ".astro",
      "src/env.d.ts",
      "**/*.astro",
      "**/*.css"
    ]
  },
  "formatter": {
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "enabled": true,
    "lineWidth": 80,
    "ignore": [
      "node_modules",
      "dist",
      "site",
      ".astro",
      "src/env.d.ts",
      "**/*.astro",
      "**/*.css"
    ]
  },
  "organizeImports": {
    "enabled": true,
    "ignore": [
      "node_modules",
      ".next",
      "dist",
      ".astro",
      "src/env.d.ts",
      "**/*.astro",
      "**/*.css"
    ]
  },
  "json": {
    "formatter": {
      "enabled": true
    }
  },
  "javascript": {
    "formatter": {
      "enabled": true,
      "quoteStyle": "single"
    }
  }
}
