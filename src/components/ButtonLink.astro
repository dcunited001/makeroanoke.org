---
import { buttonCVA } from '@/components/cva';
import type { HTMLAttributes } from 'astro/types';
import { type VariantProps } from 'class-variance-authority';

export interface Props extends HTMLAttributes<'a'>, VariantProps<typeof a> {}

/**
 * For Astro components, we recommend setting your defaultVariants within
 * Astro.props (which are `undefined` by default)
 */
const {
  intent = 'primary',
  size = 'md',
  _content = 'text',
  ...attrs
} = Astro.props;
---

<a class={buttonCVA({ intent, size, _content })} {...attrs}>
  <slot />
</a>
