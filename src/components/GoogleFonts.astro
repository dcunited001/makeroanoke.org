---
import { theme } from '@/consts';

// let fontParams: [GoogleFont] = googleFonts;
let fontParams = theme.googleFonts
  .map((font) => {
    const name = font.name.replaceAll(' ', '+');
    if (font.weights) {
      return `${name}:${font.weights.replaceAll(' ', '')}`;
    } else {
      return name;
    }
  })
  .join('|');

// This constructs a URL that returns results of the form below
